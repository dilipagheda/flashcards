@model CardViewModel

<div class="row">
    <div class="col-12">
        <h1>@Model.DeckName</h1>
        <p>Add New Card</p>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="DeckDetail" asp-action="AddNewCard" method="post">
            <div class="form-group">
                <label asp-for="QuestionText">Question</label>
                <input asp-for="QuestionText" class="form-control" aria-describedby="question" placeholder="Enter question">
            </div>
            <div class="form-group">
                <label asp-for="AnswerText">Answer</label>
                <input asp-for="AnswerText" class="form-control" aria-describedby="answer" placeholder="Enter answer">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
